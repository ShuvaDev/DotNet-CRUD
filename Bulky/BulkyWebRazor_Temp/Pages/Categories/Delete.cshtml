@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post" asp-antiforgery="true" asp-page="/categories/delete">
    <input asp-for="category.Id" type="hidden" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="mb-3 row">
            <label asp-for="category.Name"></label>
            <input class="form-control" asp-for="category.Name" disabled />
        </div>
        <div class="mb-3 row">
            <label asp-for="category.DisplayOrder"></label>
            <input class="form-control" asp-for="category.DisplayOrder" disabled />
        </div>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-page="/categories/index" class="btn btn-outline-secondary form-control">Back To List</a>
        </div>
    </div>
</form>
