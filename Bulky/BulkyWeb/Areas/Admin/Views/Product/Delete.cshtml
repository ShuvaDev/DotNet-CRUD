@model Product


<form method="post" asp-antiforgery="true" asp-controller="Product" asp-action="Delete">
    <input asp-for="Id" type="hidden"/> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
        </div>
        <div class="mb-3 row">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" disabled/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" disabled />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="ISBN"></label>
            <input class="form-control" asp-for="ISBN" disabled />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Author"></label>
            <input class="form-control" asp-for="Author" disabled />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="ListPrice"></label>
            <input class="form-control" asp-for="ListPrice" disabled />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Price"></label>
            <input class="form-control" asp-for="Price" disabled />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Price50"></label>
            <input class="form-control" asp-for="Price50" disabled/>
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Price100"></label>
            <input class="form-control" asp-for="Price100" disabled/>
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
        </div>
    </div>
</form>