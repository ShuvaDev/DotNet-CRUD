@model List<Company>
@{
    ViewData["Title"] = "Index";
}
@if(TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
    <script src="~/js/company.js"></script>
}
<div class="conteainer">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Company
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" id="companyTable">
        <thead>
            <tr>
                <th>
                    Company Name
                </th>
                <th>
                    Street Address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Phone Number
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}