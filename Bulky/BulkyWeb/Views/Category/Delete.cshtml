@model Category


<form method="post" asp-antiforgery="true" asp-controller="Category" asp-action="Delete">
    <input asp-for="Id" type="hidden"/> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" disabled/>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" disabled/>
        </div>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
        </div>
    </div>
</form>